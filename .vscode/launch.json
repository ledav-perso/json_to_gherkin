  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Run)",
      "type": "lldb",
      "request": "launch",
      "sourceLanguages": [
        "rust"
      ],
      "cargo": {
        "args": [
          "test",
          "--bin=json_to_gherkin"
        ], // Cargo command line to run the debug target
        "cwd": "${workspaceFolder}", // Cargo working directory
        "problemMatcher": "$rustc", // Problem matcher(s) for Cargo output
      },
      "env": {
        "RUST_LOG": "debug",
        "OPENAPI_PATH": "./doc/geocaptcha-openapi.json"
      }
    },
    {
      "name": "Debug (Tests)",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "test",
          "--bin=json_to_gherkin"
        ],
      },
      "env": {
        "OPENAPI_PATH": "./doc/geocaptcha-openapi.json",
        "RUST_LOG": "debug"
      }
    }
  ]
}